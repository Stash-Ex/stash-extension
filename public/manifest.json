{
  "manifest_version": 3,
  "name": "MetaCache Extension",
  "description": "This extension will display any caches stored on the user's current web page.",
  "version": "1.0",
  "action": {
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "./static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "/index.css"
      ],
      "js": [
        "/static/js/main.js"
      ],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "static/*",
        "web3Proxy.js",
        "web3Proxy.js.map"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ]
}